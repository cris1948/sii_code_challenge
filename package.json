{
  "name": "sii_code_challenge",
  "version": "1.0.0",
  "scripts": {
    "build": "node-sass --include-path scss src/scss/main.scss lib/css/main.css --output-style compressed | babel src/js -d lib/js --minified",
    "watch": "concurrently --kill-others \"npm run build-js\" \"npm run build-css\"",
    "build-css": "node-sass -w --include-path scss src/scss/main.scss lib/css/main.css --output-style compressed",
    "build-js": "babel src/js -w -d lib/js --minified"
  },
  "devDependencies": {
    "babel-cli": "^6.0.0",
    "babel-preset-env": "^1.6.0",
    "concurrently": "^3.5.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.0"
  }
}
